{% extends 'base.html.twig' %}

{% block title %}Drivers index{% endblock %}

{% block body %}
    <h1>Drivers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>License</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for driver in drivers %}
            <tr>
                <td>{{ driver.id }}</td>
                <td>{{ driver.name }}</td>
                <td>{{ driver.surname }}</td>
                <td>{{ driver.license }}</td>
                <td>
                    <a href="{{ path('app_drivers_crud_show', {'id': driver.id}) }}">show</a>
                    <a href="{{ path('app_drivers_crud_edit', {'id': driver.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
        <ul>
            <li><a href="{{ path('app_drivers_crud_new') }}">Create new</a></li>
            <li><a href="{{ path('app_main_menu') }}">Main Menu</a></li>
        </ul>
{% endblock %}
