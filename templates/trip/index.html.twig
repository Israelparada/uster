{% extends 'base.html.twig' %}

{% block title %}Trips{% endblock %}

{% block body %}
    <h1>Trips</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Vehicles</th>
                <th>Drivers</th>                
            </tr>
        </thead>
        <tbody>
        {% for trip in trips %}
            <tr>
                <td>{{ trip.vehicles }}</td>
                <td>{{ trip.drivers }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <a href="{{ path('app_main_menu') }}">Main Menu</a>
{% endblock %}
